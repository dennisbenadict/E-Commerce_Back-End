{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "THIS_IS_A_LONG_SUPER_SECRET_KEY_1234567890_ABCDEF",
    "Issuer": "authservice",
    "Audience": "auth_clients"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/auth/{**catch-all}"
          }
        ]
      },
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuthenticatedUser",
        "Transforms": [
          {
            "PathPattern": "/api/users/{**catch-all}"
          }
        ]
      },
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuthenticatedUser",
        "Transforms": [
          {
            "PathPattern": "/api/products/{**catch-all}"
          }
        ]
      },
      "categories-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/categories/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuthenticatedUser",
        "Transforms": [
          {
            "PathPattern": "/api/categories/{**catch-all}"
          }
        ]
      },
      "cart-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/cart/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuthenticatedUser",
        "Transforms": [
          {
            "PathPattern": "/api/cart/{**catch-all}"
          }
        ]
      },
      "orders-route": {
        "ClusterId": "products-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuthenticatedUser",
        "Transforms": [
          {
            "PathPattern": "/api/orders/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://authservice:8080"
          }
        }
      },
      "users-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://userservice:8080"
          }
        }
      },
      "products-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://productservice:8080"
          }
        }
      }
    }
  }
}

